<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity"
    android:background="@color/white">


    <TextView
        android:textColor="@color/black"
        android:text="Seu IMC é:"
        android:fontFamily="@font/boris1312"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:padding="12dp"
        android:textSize="38sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boris1312"
        tools:text="27.104"
        android:textColor="@color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="-10dp"/>
    <TextView
        android:id="@+id/textview_classificacao"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classificação: Normal"
        android:fontFamily="@font/almondega"
        android:textAlignment="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="0dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="VEJA A TABELA ABAIXO"
        android:fontFamily="@font/almondega"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:fontFamily="@font/almondega"
        android:text="Menor que 18,5 - Magreza"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almondega"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:text="Entre 18,5 a 24,9 - Normal"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almondega"
        android:textColor="@color/black"
        android:layout_margin="0dp"
        android:text="Entre 25,0 a 29,9 - Sobrepeso"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/almondega"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:text="Entre 30,00 a 39,9 - Obesidade"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/almondega"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:text="Entre 30,00 a 39,9 - Obesidade grave"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/boris131202"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="O que fazer com essa informação?"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/almondega"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="É importante entender que o IMC é apenas uma medida inicial. Não leva em consideração outros fatores importantes, como composição corporal, massa muscular, distribuição de gordura, etc. Consultar um profissional de saúde é crucial para obter uma avaliação completa da sua saúde."
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center_horizontal"/>


</LinearLayout>
